{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lifthrasir",
  "version": "0.1.0",
  "identifier": "com.lifthrasir.client",
  "build": {
    "beforeDevCommand": "cd web-ui && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd web-ui && npm run build",
    "frontendDist": "../web-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lifthrasir - Ragnarok Online Client",
        "width": 1024,
        "height": 768,
        "transparent": true,
        "resizable": true,
        "devtools": true,
        "fullscreen": false,
        "shadow": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:default",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:app:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "core:window:allow-set-decorations",
            "core:window:allow-set-position",
            "core:window:allow-set-focus",
            "core:window:allow-set-effects",
            "core:window:allow-set-shadow",
            "core:window:allow-set-size",
            "core:window:allow-set-always-on-top"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Lifthrasir Project",
    "copyright": "Copyright Â© 2025 Lifthrasir Project",
    "category": "Game",
    "shortDescription": "Modern Ragnarok Online client built with Rust and Bevy",
    "longDescription": "Lifthrasir is a cross-platform Ragnarok Online client implementation written in Rust using the Bevy game engine with a React-based UI. This project aims to recreate the classic MMORPG client experience while leveraging modern technologies for performance and maintainability.",
    "icon": [
      "icons/icon.png"
    ]
  }
}
